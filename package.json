{
	"name": "startup-template-backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"prisma:generate": "yarn prisma generate",
		"prisma:generate:watch": "yarn prisma generate --watch",
		"prisma:dev:migrate:dev": "dotenv -e .env.development -- yarn prisma migrate dev",
		"prisma:dev:migrate:dev:name": "dotenv -e .env.development -- yarn prisma migrate dev --name",
		"prisma:dev:reset": "dotenv -e .env.development -- yarn prisma migrate reset --force",
		"prisma:dev:seed": "dotenv -e .env.development -- ts-node prisma/seed.ts",
		"docker:dev:up": "docker compose -f docker-compose.dev.yaml up",
		"docker:dev:down": "docker compose -f docker-compose.dev.yaml down"
	},
	"dependencies": {
		"@apollo/server": "^4.10.2",
		"@nestjs/apollo": "^12.1.0",
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/graphql": "^12.1.1",
		"@nestjs/platform-express": "^10.0.0",
		"@prisma/client": "5.12.1",
		"bcrypt": "^5.1.1",
		"class-validator": "^0.14.1",
		"graphql": "^16.8.1",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.4.1",
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.12.7",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"class-transformer": "^0.5.1",
		"dotenv": "^16.4.5",
		"dotenv-cli": "^7.4.1",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"graphql-type-json": "^0.3.2",
		"jest": "^29.5.0",
		"prettier": "^3.0.0",
		"prisma": "^5.12.1",
		"prisma-graphql-type-decimal": "^3.0.0",
		"prisma-nestjs-graphql": "^20.0.2",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.4.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
